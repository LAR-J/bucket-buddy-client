<form id="update-profile">
  <div class="form-group">
    <h6>Edit your Profile</h6>
    <h6>Your Name</h6>
    <fieldset>
      <input type="text" class="form-control" name="profile[name[firstName]]" placeholder="First Name" value="{{name.firstName}}">
      <input type="text" class="form-control" name="profile[name[lastName]]" placeholder="Last Name" value="{{name.lastName}}">
    </fieldset>
  </div>
  <hr>
  <div class="form-group">
    <h6>Username</h6>
    <fieldset>
      <input type="text" class="form-control" name="profile[username]" placeholder="Enter Username" required value="{{username}}">
    </fieldset>
  </div>
  <hr>
  <div class="form-group">
    <h6>About Me</h6>
    <fieldset>
      <textarea class="form-control about-me" name="profile[aboutMe]" value="{{aboutMe}}"></textarea>
    </fieldset>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <h6>Location</h6>
        <fieldset>
          <input type="text" class="form-control three-column" name="profile[city]" placeholder="City" value="{{city}}">
        </fieldset>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <h6>Gender</h6>
        <fieldset>
          <select name="profile[gender]">
            <option value="n">No Answer</option>
            <option value="f">Female</option>
            <option value="m">Male</option>
            <option value="o">Other</option>
          </select>
        </fieldset>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <h6>Date of Birth</h6>
        <fieldset>
          <input class="form-control three-column" name="profile[dob]" placeholder="Date of Birth" type="date">
        </fieldset>
      </div>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
